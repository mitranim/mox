%YAML 1.2
---
version: 2
extends: Packages/mox/mox_base_lang.sublime-syntax
scope: source.mox

variables:
  assign_op: '='

contexts:
  match-idents:
    - include: match-idents-assign
    - include: match-idents-base

  match-idents-assign:
    - match: '({{ident}})\s*({{assign_op}})(?!{{operator}})'
      captures:
        1: entity.name.mox
        2: keyword.operator.assignment.mox
