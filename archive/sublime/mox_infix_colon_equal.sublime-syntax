---
version: 2
extends: Packages/mox/mox_base_lang.sublime-syntax
scope: source.mox

variables:
  assign_op: ':='

contexts:
  ident-match:
    - meta_prepend: true
    - include: ident-assign-match

  ident-assign-match:
    - match: '({{ident}})\s*({{assign_op}})(?!{{operator}})'
      captures:
        1: entity.name.mox
        2: keyword.operator.assignment.mox
